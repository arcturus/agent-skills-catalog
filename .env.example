# Server (REST API, MCP at /mcp, and frontend on same port)
PORT=3000

# Database
DB_PATH=./db/skills.db

# Logging
LOG_PATH=./logs
LOG_LEVEL=info

# GitHub repos to ingest (comma-separated owner/repo)
# Example: GITHUB_REPOS=owner1/repo1,owner2/repo2
GITHUB_REPOS=

# Required for ingestion: GitHub personal access token (GitHub Search API requires auth)
# Create at https://github.com/settings/tokens â€” no scopes needed for public repos
GITHUB_TOKEN=

# Optional: ingestion interval in minutes (0 = manual only)
INGESTION_INTERVAL_MINUTES=0
